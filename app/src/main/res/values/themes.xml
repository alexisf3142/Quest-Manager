<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuestManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_blue</item>
        <item name="colorPrimaryVariant">@color/gray_blue_dark</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/maroon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/dark_green</item>
    </style>
    <style name="Button.Maroon" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/maroon</item>
    </style>
    <style name="Button.Brown" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/brown</item>
    </style>

</resources>