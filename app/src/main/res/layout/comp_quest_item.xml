<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/compQuestNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1."
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/compQuestNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="questName"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_weight="0"
            android:id="@+id/compQuestDueDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/compQuestDescriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="questDescription"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginLeft="28dp"/>

        <TextView
            android:layout_weight="0"
            android:id="@+id/compQuestDueTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Time"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

</LinearLayout>