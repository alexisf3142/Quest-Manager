<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1."
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/questNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="questName"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_weight="0"
            android:id="@+id/questDueDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/questDescriptionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="questDescription"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginLeft="28dp"/>

        <TextView
            android:layout_weight="0"
            android:id="@+id/questDueTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Time"
            android:fontFamily="@font/medievalsharp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/questEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:fontFamily="@font/medievalsharp"
            android:layout_marginRight="20dp"
            android:text="Edit"
            android:textSize="14sp" />

        <Button
            android:id="@+id/questDeselectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Deselect"
            android:fontFamily="@font/medievalsharp"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/questCompleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete"
            android:fontFamily="@font/medievalsharp"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questMovePosTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Move to position:"
            android:fontFamily="@font/medievalsharp"
            android:textSize="20sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questMovePosET"
            android:hint="#"
            android:fontFamily="@font/medievalsharp"
            android:textSize="20sp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/questMoveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move"
            android:fontFamily="@font/medievalsharp"
            android:textSize="14sp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/questDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/medievalsharp"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>