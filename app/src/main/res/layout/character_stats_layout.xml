<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Name"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Title"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/profileProfession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Profession"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/equippedWeapon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Weapon"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="Gold: "
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amountOfGold"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="0"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="Strength:"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/amountOfStrength"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="0"
            android:textSize="34sp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/amountOfGold" />

        <Button
            android:id="@+id/buttonStrengthSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/medievalsharp"
            android:onClick="buttonAddStrengthSkillPoint"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="Dexterity:"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/amountOfDexterity"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="0"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonDexSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/medievalsharp"
            android:onClick="buttonAddDexSkillPoint"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="Luck:"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/amountOfLuck"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="0"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonLuckSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/medievalsharp"
            android:onClick="buttonAddLuckSkillPoint"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="Intelligence:"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/amountOfIntelligence"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="0"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonIntelligneceSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/medievalsharp"
            android:onClick="buttonAddSmtSkillPoint"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="Power:"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/amountOfPower"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:fontFamily="@font/medievalsharp"
            android:text="0"
            android:textSize="34sp" />
    </LinearLayout>

</LinearLayout>